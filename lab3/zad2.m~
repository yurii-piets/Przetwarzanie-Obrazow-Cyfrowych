clearvars; close all; clc;

lena = imread('lena.bmp');
jet = imread('jet.bmp');

sum = imadd(imgLena,imgJet,'uint16');
figure(1);
subplot(1,3,1); imshow(imgLena); title('Lena');
subplot(1,3,2); imshow(imgJet); title('Jet');
subplot(1,3,3); imshow(sum,[]); title('Dodawanie'); 

linComb = imlincomb(1, jet, 1, lena);
imshow(linComb, []);